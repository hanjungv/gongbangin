<!--page title start-->
<section class="page-title">
  <div class="container">
    <h4 class="text-uppercase">회원정보수정</h4>
  </div>
  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">회원정보수정</li>
  </ol>
</section>
<!--page title end-->
<div class="wrapper">
  <div class="container">
    <%= render 'layouts/error_messages', object: resource %>
    <div class="panel panel-default devise-bs">
      <div class="heading-title-alt border-short-bottom text-center ">
        <br>
        <h3 class="text-uppercase">개인정보 수정</h3>
        <br>
      </div>
      <div class="career-form">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
            <div class="form-group col-md-6">
              <%= f.label :변경비밀번호 %>
              <%= f.password_field :password, :autocomplete => 'off', class: 'form-control', placeholder: '변경비밀번호' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :변경비밀번호확인 %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '다시 한번 입력해주세요' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :현재비밀번호 %>
              <%= f.password_field :current_password, class: 'form-control', placeholder: '현재 비밀번호를 입력해주세요' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :이름 %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :전화번호 %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :주소 %>
              <%= f.text_field :address, class: 'form-control', placeholder: '주소를 입력해주세요' %>
            </div>

            <div class="form-group col-md-6">
              <%= f.label :사업자명 %>
              <%= f.text_field :brand, class: 'form-control', placeholder: '사업자명을 입력해주세요' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :사업자번호 %>
              <%= f.text_field :brand_number, class: 'form-control', placeholder: '사업자번호를 입력해주세요' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :사업자장소 %>
              <%= f.text_field :brand_place, class: 'form-control', placeholder: '사업자장소를 입력해주세요' %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :개인유저페이지 %>
              <%= f.text_field :user_page, class: 'form-control', placeholder: '개인 페이지를 입력해주세요' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label :페이스북아이디 %>
              <%= f.text_field :facebook_id, class: 'form-control', placeholder: '페이스북 아이디를 입력해주세요' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label :트위터아이디 %>
              <%= f.text_field :twitter_id, class: 'form-control', placeholder: '트위터 아이디를 입력해주세요' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label :인스타그램아이디 %>
              <%= f.text_field :instagram_id, class: 'form-control', placeholder: '인스타그램 아이디를 입력해주세요' %>
            </div>
            <div class="form-group col-md-12">
              <%= f.label :자기소개 %>
              <%= f.text_area :introduction, class: 'form-control', rows: '5', placeholder: '한줄 자기소개를 입력해 주세요' %>
            </div>
            <div class="form-group col-md-12">
              <%= f.label :프로필이미지%>
              <%= f.file_field :profile_image_url, :class=>"form-control"  %>
            </div>
            <div class = "text-center">
              <%= f.submit t('.update', :default => 'Update'), class: 'btn btn-primary' %>
              <p><%= t('.unhappy', :default => 'Unhappy') %>
                ? <%= link_to t('.cancel_my_account', :default => 'Cancel my account'), registration_path(resource_name), :data => {:confirm => t('.are_you_sure', :default => 'Are you sure?')}, :method => :delete %>
                .</p>
              <%= link_to t('.back', :default => 'Back'), :back %>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
