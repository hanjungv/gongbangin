<style>
.style_image {
  z-index: -1;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}
.card-panel {
  width: 360px;
  padding: 8% 0 0;
  margin: auto;
  border: 3px solid white;
  padding:20px 30px;

  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.body {
  font-family:나눔고딕;
}
.container {
  z-index: 1;
  position: relative;
}
input, label {
  color: black;
}
</style>

<div class="container">
  <div class="card-panel hoverable transparent">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'layouts/error_messages', object: resource %>

    <div class="field">
      <p class="white-text center-align">이메일</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "center-align", placeholder: "이메일을 입력해 주세요." %>
    </div>

    <div class="field">
      <p class="white-text center-align">비밀번호</p>
      <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} 글자 이상이 필요합니다.", class: "center-align" %>
    </div>

    <div class="field">
      <p class="white-text center-align">비밀번호 재확인</p>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "center-align", placeholder: "비밀번호를 다시 한 번 입력해 주세요." %>
    </div>

    <div class="field">
      <p class="white-text center-align">이름</p>
      <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "center-align", placeholder: "이름을 입력하세요." %>
    </div>

    <div class="field">
      <p class="white-text center-align">전화번호</p>
      <%= f.text_field :phonenumber, autofocus: true, autocomplete: "off", class: "center-align", placeholder: "전화번호를 입력해 주세요." %>
    </div>
    <br>
    <div class="row">
      <div class="actions center-align">
        <button class="btn waves-effect waves-light col s8 offset-s2" type="submit" name="commit">가입하기</button>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
