<%= form_tag('/search/flea_city_place', method: 'get') do %>
    <div class="input-group">
      <%= text_field_tag 'search', nil, :placeholder => 'Search for..', :class => 'form-control' %>
      <div class="input-group-btn">
        <%= button_tag(type: 'submit', class: 'btn btn-warning') do %>
            <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </div>
    </div>
<% end %>

<% @search_flea.each_with_index do |p, index| %>
    <table>
      <tr>
        <p><%= p.application_start_date %></p>
        <p><%= p.application_end_date %></p>
        <p><%= p.number_of_recruitment %></p>
        <p><%= p.remark %></p>
        <p><%= p.city_place %></p>
        <p><%= p.detail_place %></p>
        <p><%= p.event_start_date %></p>
        <p><%= p.event_end_date %></p>
        <p><%= p.entrance_fee %></p>
        <p><%= link_to 'Show', p %></p>
        <p><%= link_to 'Edit', edit_flea_path(p) %></p>
        <p><%= link_to 'Destroy', p, method: :delete, data: {confirm: 'Are you sure?'} %></p>
      </tr>
    </table>
<% end %>
