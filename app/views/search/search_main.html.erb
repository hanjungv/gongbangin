<section class="page-title">
  <div class="container">
    <h4 class="text-uppercase">Total Ranking</h4>
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">랭킹</li>
    </ol>
  </div>
</section>
<div class="container">

  <div class="col-md-12" style="margin-top:20px;">
    <div class="text-center" style="margin-bottom:15px;">
      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/search/search_main" class="nav-link active">All</a></li>
        <li class="nav-item"><a href="/search/planner" class="nav-link">planner</a></li>
        <li class="nav-item"><a href="/search/seller" class="nav-link">seller</a></li>
      </ul>
    </div>
    <table class="table table-striped" id="searchTable">
      <thead>
      <tr>
        <th style="width:6%;">등수</th>
        <th style="width:15%;">닉네임</th>
        <th style="width:10%;">Who?</th>
        <th style="width:49%">자기소개</th>
        <th style="width:10%;">티어</th>
        <th style="width:10%;">점수</th>
      </tr>
      </thead>
      <tbody>
      <% @all_user.each_with_index do |p, index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td>
              <a href="/show_info/<%= p.id %>" style="font-weight: bold; color:<%= p.tier %>">
                <% if index < 5 %>
                    <%= image_tag('medal.png', height: '20', width: '20') %>
                <% end %>
                <%= p.nickname %></a>
            </td>
            <td><%= p.level %></td>
            <td><%= p.introduction %></td>
            <td style="color:<%= p.tier %>"><%= p.tier %></td>
            <td><%= p.score %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>

<script>
  $(document).ready(function () {
    $table = $('#searchTable').DataTable({
      "lengthMenu": [[20, 50, 100, -1], [20, 50, 100, "All"]]
    });
  });
</script>
